<%- include('../partials/header') %>

<div class="container">
  <div class="row mb-4">
    <div class="col-lg-8">
      <h1 class="display-5 mb-3">Welcome, User!</h1>
      <p class="lead">Manage your e-waste recycling activities and track your environmental impact.</p>
    </div>
    <div class="col-lg-4 text-lg-end d-flex align-items-center justify-content-lg-end">
      <a href="/logout" class="btn btn-outline-danger">
        <i class="fas fa-sign-out-alt me-2"></i> Logout
      </a>
    </div>
  </div>

  <!-- Dashboard Stats -->
  <div class="row g-4 mb-5">
    <div class="col-md-3">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body text-center">
          <div class="display-4 text-success mb-2">0</div>
          <p class="text-muted mb-0">Pickups Scheduled</p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body text-center">
          <div class="display-4 text-success mb-2">0</div>
          <p class="text-muted mb-0">Items Recycled</p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body text-center">
          <div class="display-4 text-success mb-2">0</div>
          <p class="text-muted mb-0">COâ‚‚ Saved (kg)</p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body text-center">
          <div class="display-4 text-success mb-2">0</div>
          <p class="text-muted mb-0">Reward Points</p>
        </div>
      </div>
    </div>
  </div>

  <div class="row g-4">
    <!-- Upcoming Pickups -->
    <div class="col-lg-6">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-header bg-white border-0">
          <div class="d-flex justify-content-between align-items-center">
            <h2 class="h5 mb-0">Upcoming Pickups</h2>
            <a href="/recycling/pickup" class="btn btn-sm btn-outline-success">Schedule New</a>
          </div>
        </div>
        <div class="card-body">
          <div class="text-center py-5">
            <i class="fas fa-calendar-alt text-muted fa-3x mb-3"></i>
            <p class="mb-0">You don't have any upcoming pickups scheduled.</p>
            <a href="/recycling/pickup" class="btn btn-success mt-3">Schedule a Pickup</a>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="col-lg-6">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-header bg-white border-0">
          <h2 class="h5 mb-0">Recent Activity</h2>
        </div>
        <div class="card-body">
          <div class="text-center py-5">
            <i class="fas fa-history text-muted fa-3x mb-3"></i>
            <p class="mb-0">No recent activity to display.</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Account Settings -->
    <div class="col-lg-6">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-header bg-white border-0">
          <h2 class="h5 mb-0">Account Settings</h2>
        </div>
        <div class="card-body">
          <ul class="list-group list-group-flush">
            <li class="list-group-item px-0">
              <a href="/profile" class="text-decoration-none d-flex justify-content-between align-items-center">
                <span><i class="fas fa-user-circle me-2"></i> Edit Profile</span>
                <i class="fas fa-chevron-right text-muted"></i>
              </a>
            </li>
            <li class="list-group-item px-0">
              <a href="/change-password" class="text-decoration-none d-flex justify-content-between align-items-center">
                <span><i class="fas fa-lock me-2"></i> Change Password</span>
                <i class="fas fa-chevron-right text-muted"></i>
              </a>
            </li>
            <li class="list-group-item px-0">
              <a href="/notification-settings" class="text-decoration-none d-flex justify-content-between align-items-center">
                <span><i class="fas fa-bell me-2"></i> Notification Settings</span>
                <i class="fas fa-chevron-right text-muted"></i>
              </a>
            </li>
            <li class="list-group-item px-0">
              <a href="/address-book" class="text-decoration-none d-flex justify-content-between align-items-center">
                <span><i class="fas fa-address-book me-2"></i> Address Book</span>
                <i class="fas fa-chevron-right text-muted"></i>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Environmental Impact -->
    <div class="col-lg-6">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-header bg-white border-0">
          <h2 class="h5 mb-0">Your Environmental Impact</h2>
        </div>
        <div class="card-body">
          <div class="text-center py-5">
            <i class="fas fa-leaf text-success fa-3x mb-3"></i>
            <p class="mb-0">Start recycling to see your environmental impact!</p>
            <a href="/education/facts" class="btn btn-outline-success mt-3">Learn More</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

