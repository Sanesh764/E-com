<%- include('../../partials/header') %>

<div class="container">
  <div class="row mb-5">
    <div class="col-lg-8 mx-auto text-center">
      <h1 class="display-4 mb-4">E-Waste Facts</h1>
      <p class="lead">Key statistics and information about the global e-waste challenge.</p>
    </div>
  </div>

  <!-- Key Facts Section -->
  <section class="mb-5">
    <div class="row g-4">
      <% facts.forEach(fact => { %>
        <div class="col-md-6">
          <div class="card h-100 border-0 shadow-sm">
            <div class="card-body">
              <h2 class="h5 mb-3 text-success"><%= fact.title %></h2>
              <p class="mb-3"><%= fact.content %></p>
              <p class="text-muted small mb-0">Source: <%= fact.source %></p>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </section>

  <!-- Infographic Section -->
  <section class="mb-5 py-5 bg-light rounded-3">
    <div class="container">
      <h2 class="text-center mb-5">E-Waste by the Numbers</h2>
      <div class="row g-4 text-center">
        <div class="col-md-3">
          <div class="display-3 text-success fw-bold mb-2">50M+</div>
          <p>Tons of e-waste generated globally each year</p>
        </div>
        <div class="col-md-3">
          <div class="display-3 text-success fw-bold mb-2">17.4%</div>
          <p>Global e-waste that is properly recycled</p>
        </div>
        <div class="col-md-3">
          <div class="display-3 text-success fw-bold mb-2">$57B</div>
          <p>Value of raw materials in annual e-waste</p>
        </div>
        <div class="col-md-3">
          <div class="display-3 text-success fw-bold mb-2">74M</div>
          <p>Projected tons of e-waste by 2030</p>
        </div>
      </div>
    </div>
  </section>

  <!-- E-Waste Composition Section -->
  <section class="mb-5">
    <h2 class="text-center mb-4">What's in E-Waste?</h2>
    <div class="row g-4">
      <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm">
          <div class="card-body">
            <h3 class="h5 mb-3 text-success">Valuable Materials</h3>
            <ul class="list-unstyled">
              <li class="mb-2"><i class="fas fa-circle text-warning me-2"></i> Gold</li>
              <li class="mb-2"><i class="fas fa-circle text-secondary me-2"></i> Silver</li>
              <li class="mb-2"><i class="fas fa-circle text-danger me-2"></i> Copper</li>
              <li class="mb-2"><i class="fas fa-circle text-primary me-2"></i> Palladium</li>
              <li class="mb-2"><i class="fas fa-circle text-dark me-2"></i> Platinum</li>
              <li class="mb-2"><i class="fas fa-circle text-info me-2"></i> Rare Earth Elements</li>
            </ul>
            <p class="text-muted small">A single smartphone can contain more than 60 different elements.</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm">
          <div class="card-body">
            <h3 class="h5 mb-3 text-success">Hazardous Substances</h3>
            <ul class="list-unstyled">
              <li class="mb-2"><i class="fas fa-exclamation-triangle text-danger me-2"></i> Lead</li>
              <li class="mb-2"><i class="fas fa-exclamation-triangle text-danger me-2"></i> Mercury</li>
              <li class="mb-2"><i class="fas fa-exclamation-triangle text-danger me-2"></i> Cadmium</li>
              <li class="mb-2"><i class="fas fa-exclamation-triangle text-danger me-2"></i> Brominated Flame Retardants</li>
              <li class="mb-2"><i class="fas fa-exclamation-triangle text-danger me-2"></i> Polychlorinated Biphenyls (PCBs)</li>
              <li class="mb-2"><i class="fas fa-exclamation-triangle text-danger me-2"></i> Chlorofluorocarbons (CFCs)</li>
            </ul>
            <p class="text-muted small">These substances can leach into soil and water when improperly disposed of.</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm">
          <div class="card-body">
            <h3 class="h5 mb-3 text-success">Common Components</h3>
            <ul class="list-unstyled">
              <li class="mb-2"><i class="fas fa-microchip text-primary me-2"></i> Circuit Boards</li>
              <li class="mb-2"><i class="fas fa-battery-full text-primary me-2"></i> Batteries</li>
              <li class="mb-2"><i class="fas fa-desktop text-primary me-2"></i> Screens (LCD, LED, CRT)</li>
              <li class="mb-2"><i class="fas fa-hdd text-primary me-2"></i> Hard Drives</li>
              <li class="mb-2"><i class="fas fa-plug text-primary me-2"></i> Power Supplies</li>
              <li class="mb-2"><i class="fas fa-box text-primary me-2"></i> Plastic Casings</li>
            </ul>
            <p class="text-muted small">Different components require different recycling processes.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Global E-Waste Map Section -->
  <section class="mb-5 py-5 bg-light rounded-3">
    <div class="container">
      <h2 class="text-center mb-4">Global E-Waste Distribution</h2>
      <div class="row">
        <div class="col-lg-8 mx-auto">
          <div class="card border-0 shadow-sm">
            <div class="card-body p-0">
              <img src="https://www.itu.int/en/ITU-D/Climate-Change/Documents/2020/Global-E-waste-Monitor-2020-map.png" alt="Global E-Waste Map" class="img-fluid rounded-3">
            </div>
            <div class="card-footer bg-white border-0 text-center">
              <p class="text-muted small mb-0">Source: Global E-waste Monitor 2020</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- E-Waste Categories Section -->
  <section class="mb-5">
    <h2 class="text-center mb-4">E-Waste Categories</h2>
    <div class="row g-4">
      <div class="col-md-6 col-lg-4">
        <div class="card h-100 border-0 shadow-sm">
          <div class="card-body">
            <div class="text-success mb-3">
              <i class="fas fa-temperature-high fa-2x"></i>
            </div>
            <h3 class="h5">Temperature Exchange Equipment</h3>
            <p>Refrigerators, freezers, air conditioners, heat pumps</p>
            <div class="progress mt-3">
              <div class="progress-bar bg-success" role="progressbar" style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">20%</div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-6 col-lg-4">
        <div class="card h-100 border-0 shadow-sm">
          <div class="card-body">
            <div class="text-success mb-3">
              <i class="fas fa-desktop fa-2x"></i>
            </div>
            <h3 class="h5">Screens and Monitors</h3>
            <p>Televisions, monitors, laptops, tablets</p>
            <div class="progress mt-3">
              <div class="progress-bar bg-success" role="progressbar" style="width: 15%" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100">15%</div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-6 col-lg-4">
        <div class="card h-100 border-0 shadow-sm">
          <div class="card-body">
            <div class="text-success mb-3">
              <i class="fas fa-lightbulb fa-2x"></i>
            </div>
            <h3 class="h5">Lamps</h3>
            <p>Fluorescent lamps, LED lamps, high-intensity discharge lamps</p>
            <div class="progress mt-3">
              <div class="progress-bar bg-success" role="progressbar" style="width: 2%" aria-valuenow="2" aria-valuemin="0" aria-valuemax="100">2%</div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-6 col-lg-4">
        <div class="card h-100 border-0 shadow-sm">
          <div class="card-body">
            <div class="text-success mb-3">
              <i class="fas fa-server fa-2x"></i>
            </div>
            <h3 class="h5">Large Equipment</h3>
            <p>Washing machines, clothes dryers, dishwashers, electric stoves, printers</p>
            <div class="progress mt-3">
              <div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25%</div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-6 col-lg-4">
        <div class="card h-100 border-0 shadow-sm">
          <div class="card-body">
            <div class="text-success mb-3">
              <i class="fas fa-blender fa-2x"></i>
            </div>
            <h3 class="h5">Small Equipment</h3>
            <p>Vacuum cleaners, microwaves, toasters, electric kettles, calculators</p>
            <div class="progress mt-3">
              <div class="progress-bar bg-success" role="progressbar" style="width: 18%" aria-valuenow="18" aria-valuemin="0" aria-valuemax="100">18%</div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-6 col-lg-4">
        <div class="card h-100 border-0 shadow-sm">
          <div class="card-body">
            <div class="text-success mb-3">
              <i class="fas fa-mobile-alt fa-2x"></i>
            </div>
            <h3 class="h5">Small IT Equipment</h3>
            <p>Mobile phones, GPS devices, routers, keyboards, mice</p>
            <div class="progress mt-3">
              <div class="progress-bar bg-success" role="progressbar" style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">20%</div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="text-center mt-4">
      <p class="text-muted">Percentages represent approximate share of global e-waste volume by category.</p>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-5 bg-success text-white rounded-3 mb-5">
    <div class="container text-center">
      <h2 class="mb-3">Knowledge is the First Step</h2>
      <p class="lead mb-4">Now that you understand the e-waste challenge, learn how you can be part of the solution.</p>
      <div class="d-flex flex-wrap justify-content-center gap-3">
        <a href="/education/tips" class="btn btn-light btn-lg">Get Reduction Tips</a>
        <a href="/recycling" class="btn btn-outline-light btn-lg">Find Recycling Options</a>
      </div>
    </div>
  </section>
</div>

<%- include('../../partials/footer') %> 